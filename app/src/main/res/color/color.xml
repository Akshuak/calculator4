<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" android:color="#448AFF">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#448AFF" />
            <gradient android:angle="-90" android:startColor="#448AFF" android:endColor="#448AFF"  />
        </shape>
    </item>

    <item android:color="#448AFF">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#448AFF" />
